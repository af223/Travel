<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.ResourcesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:text="Flights"
            android:textColor="#000000"
            android:transitionName="to_flights_transition"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvHotels"
            android:padding="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotels"
            android:textColor="#000000"
            android:transitionName="to_hotels_transition"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvTouristSpots"
            android:padding="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Activities"
            android:transitionName="to_tourist_spots_transition"
            android:textColor="#000000"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
</ScrollView>