<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TouristSpotsActivity">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvActivityType"
        android:layout_below="@+id/toolbar"
        android:hint="Filter by suggested activity categories"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:drawablePadding="16dp"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:background="@android:drawable/editbox_background" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTouristActivities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/etQueryActivity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <ProgressBar
        android:id="@+id/pbTouristLoad"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rvTouristActivities"
        android:layout_alignTop="@+id/rvTouristActivities"
        android:layout_alignEnd="@+id/rvTouristActivities"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="160dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etQueryActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvActivityType"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/btnQueryActivity"
        android:ems="10"
        android:hint="@string/search_by_keyword"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnQueryActivity"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_below="@+id/tvActivityType"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:text="Search" />

</RelativeLayout>